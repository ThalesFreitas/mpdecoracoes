{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Editar modelo: </h3>

<div class="card">
    <div class="card-body">
<form action="/admin/modelos/edit" method="POST">
<input type="hidden" name="id" value="{{modelo._id}}">
<label for="nome">Nome: </label>
<input type="text" name="nome" id="nome" placeholder="Nome do modelo" class="form-control" value="{{modelo.nome}}">
<label for="slug">Slug: </label>
<input type="text" id="slug" name="slug" placeholder="Slug do modelo" class="form-control" value="{{modelo.slug}}">
<br>
<button type="submit" class="btn btn-success">Editar modelo</button>
</form>
    </div>
</div>
