<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>
<br>
{{#each categorias}}
<br>
    <div class="card" id="listacategorias">
        <div class="card-body">
            <h4>Categoria: {{nome}}</h4>
             <small><b>Slug da categoria:</b>  {{slug}}</small>
             <br>
             <small>Data de criação: {{date}}</small><br>
             <a href="/admin/categorias/edit/{{_id}}"><br>
             <button class="btn btn-success mt-4">Editar categoria</button>
             </a>
             <form action="/admin/categorias/deletar" method="POST">
                 <input type="hidden" name="id" value="{{_id}}">
                 <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
             </form>
             
        </div>
    </div>

{{else}}
<h4 class="mt-3">Nenhuma categoria registrada!</h4>
{{/each}}