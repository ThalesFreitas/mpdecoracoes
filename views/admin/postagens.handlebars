<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>


{{#each postagens}}
    <div class="card mt-4">

        
        <div class="card-body">
            
             <img src="https://uploadmpdecoracoes.s3.amazonaws.com/{{key}}" height="300" width="300" alt="Imagem do tema {{nome}}">
            <h4 id="nometema">{{nome}}</h4>
            <small> <b> Categoria:</b> {{categoria.nome}}</small> <br>
             <small> <b> Modelo:</b> {{modelo.nome}}</small> <br>
            <small> <b> Data:</b> {{data}}</small>
            <br>
            <!--<a href="/admin/postagens/edit/{{_id}}/{{key}}"><button class="btn btn-success mt-3">Editar postagem</button></a>-->
         <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-3">Deletar postagem</button></a>
        </div>


    </div>

{{else}}
<p>Nenhuma postagem registrada!</p>
{{/each}}